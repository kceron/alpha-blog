<h1 class="text-center mt-3">Alpha Bloggers</h1>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-3">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to user.username, user %>
              <!-- can also just do "user_path(user)" rails can form the path -->
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(user, size: 150), user %>
            </h5>
            <p class="card-text">
              <%= pluralize(user.articles.count, "article" ) %>
            </p>
            <%= link_to "View profile" , user, class: "btn btn-outline-success" %>
            <%= link_to "Edit profile" , edit_user_path(user), class: "btn btn-outline-warning" %>
            <!-- <%= link_to "Delete profile", user, class: "btn btn-outline-danger" , method: :delete, data:
            {confirm: "Are you sure?" } %> -->
          </div>
          <div class="card-footer text-muted">
            <small>
              <!-- helper method: time_ago_in_words -->
              Joined <%= time_ago_in_words(user.created_at) %> ago
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>